<div class="sign_wrapper">
  <div class="container">
    <div class="new_title_wrap">
      <h2 class="new_title">ログイン</h2>
    </div>
      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'new_for' %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'new_for' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
                <%= f.label :remember_me %><br />
                <%= f.check_box :remember_me, class: 'new_for' %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: "actions_btn" %>
          </div>
      <% end %>
  </div>
</div>