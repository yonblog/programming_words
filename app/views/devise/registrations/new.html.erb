<div class="sign_wrapper">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
        	<%= f.label :nickname, class: 'new_text' %> <em>(6 characters maximum)</em><br/>
        	<%= f.text_field :nickname, autofocus: true, maxlength: "6", class: 'new_form' %>
      	</div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: 'new_for' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'new_for' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'new_for' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
    <% end %>
  </div>
</div>